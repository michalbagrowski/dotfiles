for file in ~/.dotfiles/bash/{path,bash_prompt,exports,exports_private,aliases,functions,extra,locale,completion,docker}; do
    [ -r "$file" ] && [ -f "$file" ] && source "$file";
done;

if [ -d "$HOME/Projects" ]; then
  cd ~/Projects
fi

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/acid/Projects/google-cloud-sdk/path.bash.inc' ]; then source '/Users/acid/Projects/google-cloud-sdk/path.bash.inc'; fi

# The next line enables shell command completion for gcloud.
if [ -f '/Users/acid/Projects/google-cloud-sdk/completion.bash.inc' ]; then source '/Users/acid/Projects/google-cloud-sdk/completion.bash.inc'; fi
